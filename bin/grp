#!/usr/bin/env ruby

require "commander/import"
require "fileutils"

include FileUtils

GARPO_DIR = ".garpo"

program :name,        "Garpo"
program :description, "Cirpo's Version Control System"
program :version,     "0.0"

command :init do |c|
  c.syntax = "grp init"
  c.description = "Initialize a Garpo repository"
  c.when_called do |args, options|
    mkdir GARPO_DIR
    say_ok "Garpo initialized"
  end
end

command :commit do |c|
  c.syntax = "grp commit"
  c.description = "Commit a directory shapshot to Garpo"
  c.option "-m", "--message MESSAGE", String, "Commit message"
  c.when_called do |args, options|
    message = options.message || ask_editor
    if message.match(/\S/)
      this_snapshot = greatest_snapshot + 1
      snapshot_dir = snapshot_directory(this_snapshot)
      files_dir = "#{snapshot_dir}/files"

      mkdir_p files_dir
      cp_r Dir.entries(".") - [".", "..", GARPO_DIR], files_dir
      open "#{snapshot_dir}/MESSAGE", "w" do |file|
        file.write message
      end
      say_ok "Garpo committed snapshot #{this_snapshot}"
    else
      say_error "Garpo aborted commit (empty commit message)"
    end
  end
end

command :checkout do |c|
  c.syntax = "grp checkout [snapshot number]"
  c.description = "Checkout a Garpo's snapshot"
  c.when_called do |args, options|
    snapshot = args[0] || greatest_snapshot
    snapshot_dir = snapshot_directory(snapshot)
    if File.directory? snapshot_dir
      cp_r "#{snapshot_dir}/files/.", "."
      say_ok "Garpo checked out snapshot #{snapshot}"
    else
      say_error "Garpo aborted checkout (not a valid revision)"
    end
  end
end

def greatest_snapshot
  Dir.glob("#{GARPO_DIR}/snapshot-*").map {|s| s[/\d+/].to_i}.max || 0
end

def snapshot_directory(number)
  "#{GARPO_DIR}/snapshot-#{number}"
end
